{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "outDir": "tmp",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "removeComments": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noLib": false,
    "skipLibCheck": true,
    "jsx": "react",
    "strictNullChecks": true,
    "baseUrl": "src",
    "types" : [
      "chai-enzyme",
      "mocha",
      "whatwg-fetch"
    ]
  },
  "include": [
    "src/**/*.tsx?"
  ],
  "exclude": [
    "node_modules",
    "test",
    "public"
  ]
}